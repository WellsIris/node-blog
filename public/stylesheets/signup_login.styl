.signup
	width 320px
	height 150px
	position fixed
	left 50%
	margin-left -160px
	top 50%
	margin-top -150px
	box-shadow 1px 1px 5px rgba(0, 0, 0, .15)
	background #e9e9e9
	border-radius 5px
	padding-top 20px

	.hr
		width 280px
.textinput
	height 40px
	width 280px
	margin 0 auto
	box-shadow 0 0 1px rgba(0, 0, 0, .15)
	label
		float left
		width 40px
		height 40px
		line-height 45px
		text-align center
		background #ccc
		i
			font-size 22px
			color #666
	input
		float right
		padding 10px
		height 20px
		line-height 20px
		width 220px
		display inline-block
		border 0 none
		border-radius 0
		margin 0px
		box-shadow none
		outline 0 none
.signupbtn
	display block
	width 280px!important
	height 40px
	margin 10px auto 0
	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, site_red), color-stop(1, #d84cba)); /* Saf4+, Chrome */
	border 0 none
	color #fff
	border-radius 4px