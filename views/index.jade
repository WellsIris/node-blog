extends layout

block content	
	.leftbar 
	.left
	ul.middle
		each article in articles
			li.blog
				.blog_info 
				.blog_content
					h3.article_title
						a(href='#') #{article.title}
					ul.article_info
						li
							span 时间:
							a(href='#') #{article.createTime}
						li
							span 作者:
							a(href='#') #{article.auther}
					.article_content #{article.content}
	.right
		h1.blog_name
			a(href='/') #{blog_name}
		h2.blog_description #{blog_description}
