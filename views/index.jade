extends layout

block content
	.topbar
		- if (username)
			span 欢迎:#{username} 
		- else
			a(href='/sign') 注册
			a(href='#') 登陆
	.leftbar 
	.left
	ul.middle
		each article in articles
			li.blog
				.blog_info 
					a.btns.del_article(href='/article/delete/#{article._id}',title='Delete'): i.icon-remove 
					a.btns.editer_article(href='/article/edit/#{article._id}',title='Edit'): i.icon-pencil 
				.blog_content
					h3.article_title: a(href='#') #{article.title}
					ul.article_info
						li
							span 时间:
							a(href='#') #{article.createTime}
						li
							span 作者:
							a(href='#') #{article.auther}
					.article_content !{article.content}
	.right
		h1.blog_name
			a(href='/') #{blog_name}
		h2.blog_description #{blog_description}
